<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f44842"
    tools:context="com.example.ajit.avalonian.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email Id"
        android:textColorHint="#FDFEFE"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="35dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/img">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#FDFEFE"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#FDFEFE"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_below="@+id/uid" >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDFEFE"
        android:id="@+id/login_pwd"
        android:inputType="textPassword"
        android:focusableInTouchMode="true"/>
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/lid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="18dp"
        android:textColor="#FDFEFE"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="91dp"
        android:layout_below="@+id/pid" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        android:textColor="#FDFEFE"
        android:layout_below="@id/lid"
        android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/prog_Bar"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/lid"/>
    </RelativeLayout>
</ScrollView>
